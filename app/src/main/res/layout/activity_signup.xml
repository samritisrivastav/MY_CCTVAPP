<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluish"

    tools:context="com.example.toshiba.cctvapp.signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/alertcam_Linear"
        >


        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Alert Camera"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/circle"
            android:textColor="#fff"
            android:gravity="center"
            android:id="@+id/text_view_alertcam"
            />

    </LinearLayout>
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_below="@id/alertcam_Linear"
    android:background="@drawable/shape"
    android:layout_marginTop="20dp"
    android:id="@+id/username_id"
    android:gravity="center_vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"


    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#08c8d6"
        android:background="@drawable/user1"
        android:padding="30dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#066ba1"
        android:layout_marginLeft="10dp"
        android:textColorHint="#08c8d6"
        android:paddingLeft="10dp"
        android:background="@null"
        android:id="@+id/user_name_id" ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/username_id"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:id="@+id/password_id"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#08c8d6"
            android:background="@drawable/key"
            android:padding="30dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#066ba1"
            android:layout_marginLeft="10dp"
            android:textColorHint="#08c8d6"
            android:paddingLeft="10dp"
            android:background="@null"
            android:id="@+id/pass_id" ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/password_id"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:id="@+id/email_id"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#08c8d6"
            android:background="@drawable/email"
            android:padding="30dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email_Adddress"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#066ba1"
            android:layout_marginLeft="10dp"
            android:textColorHint="#08c8d6"
            android:paddingLeft="10dp"
            android:background="@null"
            android:id="@+id/email_address_id" ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/email_id"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:id="@+id/mobile_id"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#08c8d6"
            android:background="@drawable/smartphone"
            android:padding="30dp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Mobile No."
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#066ba1"
            android:layout_marginLeft="10dp"
            android:textColorHint="#08c8d6"
            android:paddingLeft="10dp"
            android:background="@null"
            android:id="@+id/mobile_no_id" ></EditText>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:layout_below="@id/mobile_id"
        android:layout_marginTop="10dp"
        android:textColor="#08c8d6"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/login_button"
        android:onClick="Submit"></Button>
</RelativeLayout>


